<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".views.farmer.fragments.farmer_profile"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <include
            layout="@layout/profile_basic_info"/>
        <TextView
            android:id="@+id/logout_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/padding"
            android:text="@string/logout"
            android:background="@color/white"
            android:textColor="@color/black"
            android:drawableStart="@drawable/ic_icons8_sign_out_24"
            android:drawablePadding="@dimen/padding"
            android:gravity="center_vertical"
            android:layout_marginTop="1dp"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin">
            <ProgressBar
                android:id="@+id/progressBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin"
                android:visibility="gone"
                android:layout_centerHorizontal="true"/>
            <Button
                android:id="@+id/switch_account"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/change_background_on_press"
                android:layout_margin="@dimen/margin"
                android:text="@string/switch_to_user"
                android:textColor="@drawable/change_text_color_on_press"
                android:visibility="gone"
                android:layout_alignParentBottom="true"/>
        </RelativeLayout>
    </LinearLayout>

</ScrollView>