<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/white"
    android:padding="@dimen/padding">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/white">
       <androidx.recyclerview.widget.RecyclerView
           android:id="@+id/order_items_rv"
           android:layout_width="match_parent"
           android:layout_height="220dp"/>
        <TextView
            android:id="@+id/delivery_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:fontFamily="@font/amarante"
            android:textColor="@color/green"
            android:layout_margin="@dimen/margin"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:id="@+id/status_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginBottom="@dimen/margin"
                android:layout_marginStart="@dimen/margin"
                android:visibility="gone"
                android:layout_centerInParent="true">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center">
                    <TextView
                        android:id="@+id/order_placed_circle"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:gravity="center"
                        android:background="@drawable/cust_circle_green_back"
                        android:visibility="visible"
                        android:fontFamily="@font/amarante" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Placed"
                        android:fontFamily="@font/amarante"
                        android:textColor="@color/black"/>
                </LinearLayout>

                <TextView
                    android:id="@+id/order_confirmed_line"
                    android:layout_width="0dp"
                    android:layout_height="3dp"
                    android:layout_marginBottom="@dimen/margin"
                    android:background="@color/light_gray"
                    android:visibility="visible"
                    android:fontFamily="@font/amarante"
                    android:layout_weight="10"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center">
                    <TextView
                        android:id="@+id/order_confirmed_circle"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:gravity="center"
                        android:background="@drawable/cust_gray_circle"
                        android:visibility="visible"
                        android:fontFamily="@font/amarante" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Confirmed"
                        android:fontFamily="@font/amarante"
                        android:textColor="@color/black"/>
                </LinearLayout>

                <TextView
                    android:id="@+id/order_delivered_line"
                    android:layout_width="0dp"
                    android:layout_height="3dp"
                    android:gravity="center"
                    android:background="@color/light_gray"
                    android:visibility="visible"
                    android:fontFamily="@font/amarante"
                    android:layout_weight="10"
                    android:layout_marginBottom="@dimen/margin"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_marginEnd="@dimen/margin">
                    <TextView
                        android:id="@+id/order_delivered_circle"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:gravity="center"
                        android:background="@drawable/cust_gray_circle"
                        android:visibility="visible"
                        android:fontFamily="@font/amarante" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Delivered"
                        android:fontFamily="@font/amarante"
                        android:textColor="@color/black"/>
                </LinearLayout>

            </LinearLayout>
            <TextView
                android:id="@+id/cancelled_order_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/order_cancelled"
                android:gravity="center"
                android:layout_gravity="center_horizontal"
                android:textColor="@color/apple"
                android:fontFamily="@font/amarante"
                android:textSize="@dimen/list_title"
                android:textStyle="bold"
                android:drawableEnd="@drawable/ic_cancel_green_24dp"
                android:drawableTint="@color/apple"
                android:drawablePadding="@dimen/padding"
                android:visibility="gone"
                android:layout_centerInParent="true"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="visible"
            android:layout_margin="@dimen/margin">
            <LinearLayout
                android:id="@+id/btn_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/cancel_order"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:text="@string/cancel_order"
                    android:gravity="center"
                    android:layout_margin="@dimen/margin"
                    android:background="@drawable/change_background_on_press"
                    android:textColor="@drawable/change_text_color_on_press"
                    android:layout_weight="1"
                    android:fontFamily="@font/amarante"
                    android:visibility="gone"/>
                <TextView
                    android:id="@+id/order_status"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:text="@string/confirm_order"
                    android:gravity="center"
                    android:layout_margin="@dimen/margin"
                    android:background="@drawable/change_background_on_press"
                    android:textColor="@drawable/change_text_color_on_press"
                    android:layout_weight="1"
                    android:fontFamily="@font/amarante"
                    android:visibility="gone"/>
            </LinearLayout>
            <ProgressBar
                android:id="@+id/btn_progressBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:visibility="gone"/>
        </RelativeLayout>
        <TextView
            android:id="@+id/title_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin"
            android:padding="@dimen/padding"
            android:gravity="center"
            android:text="@string/customer"
            android:textSize="@dimen/page_title"
            android:fontFamily="@font/amarante"
            android:textColor="@color/green"/>
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profile_image"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/profile"
            app:civ_border_width="1dp"
            app:civ_border_color="@color/green"/>
        <TextView
            android:id="@+id/contact"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/contact"
            android:textColor="@color/green"
            android:fontFamily="@font/amarante"
            android:textStyle="bold"
            android:drawableEnd="@drawable/ic_call_white_24dp"
            android:drawableTint="@color/green"
            android:layout_marginStart="@dimen/margin"
            android:layout_marginEnd="@dimen/margin"/>
        <TextView
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/name"
            android:textColor="@color/green"
            android:fontFamily="@font/amarante"
            android:layout_marginStart="@dimen/margin"
            android:layout_marginEnd="@dimen/margin"/>
        <TextView
            android:id="@+id/address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/address"
            android:textColor="@color/green"
            android:fontFamily="@font/amarante"
            android:layout_marginStart="@dimen/margin"
            android:layout_marginEnd="@dimen/margin"/>
    </LinearLayout>


</ScrollView>